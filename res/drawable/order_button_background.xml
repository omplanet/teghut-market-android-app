<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item android:state_focused="true">
		<shape android:shape="rectangle">
		    
		    <stroke
		    	android:width="2dp"
		    	android:color="@color/dialog_title_color"/>
		</shape>
	</item>
	
	<item android:state_pressed="true">
		<shape
		    android:shape="rectangle">
		    
		    <solid android:color="@color/dialog_title_color" />
		    
		    <stroke
		    	android:width="2dp"
		    	android:color="@color/order_btn_color"/>
		</shape>
		
	</item>
	
    <item> 
        <shape android:shape="rectangle">            
		      <solid android:color="@color/order_btn_color" />
		</shape>
	</item> 
</selector>

